<header ng-controller="NavigationController">
	<div class="clear"></div>
	<div class="container_12">
		<div class="grid_12">
			<h1>
				<%= link_to image_tag("logo1.jpg", :alt => ""), "#/" %>
			</h1>
			<div class="menu_block">
				<nav class="horizontal-nav full-width horizontalNav-notprocessed">
					<ul class="sf-menu">
						<li ng-repeat="menu in menuList" ng-class="{'current': menu.title == selectedMenu}" ng-click="selectMenu(menu.title)">
							<a href="{{menu.url}}">{{menu.title}}</a>
							<ul>
								<li ng-repeat="home in menu.homeSubMenue">
									<%= link_to "{{home.title}}", "{{home.url}}"%>
									<ul>
										<li ng-repeat="news in home.newsSubMenue">
											<%= link_to "{{news.title}}", "{{news.url}}" %>
										</li>
									</ul>
								</li>
							</ul>
						</li>
						<li class="pull-right"><a href="#login">Login</a></li>
					</ul>
				</nav>
				<div class="clear"></div>
			</div>
			<div class="clear"></div>
		</div>
	</div>
</header>